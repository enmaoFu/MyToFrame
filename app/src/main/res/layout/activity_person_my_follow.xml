<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_bar_public">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/r"
            android:background="#00000000">

            <!-- 左 -->
            <ImageView
                android:id="@+id/left_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="#fff"/>

            <!-- 中 -->
            <LinearLayout
                android:id="@+id/center_text"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/shape_person_my_follow_style">

                <TextView
                    android:id="@+id/person_my_follow_doctor_text"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:text="关注的医生"
                    android:textColor="#4CCAB4"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:background="@drawable/shape_person_my_follow_dorcter_style"/>

                <TextView
                    android:id="@+id/person_my_follow_mechanism_text"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:text="关注的机构"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:background="@drawable/shape_person_my_follow_mechanism_style1"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/bottom_menu">
    </FrameLayout>

</LinearLayout>

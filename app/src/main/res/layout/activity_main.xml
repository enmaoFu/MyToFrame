<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/ic_home_bg">

    <!-- @drawable/shape_status_bar -->
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000">

        <include layout="@layout/public_title_public"/>

    </LinearLayout>

    <pl.bclogic.pulsator4droid.library.PulsatorLayout
        android:id="@+id/pulsator"
        android:layout_width="238dp"
        android:layout_height="238dp"
        app:pulse_count="6"
        app:pulse_duration="7000"
        app:pulse_repeat="0"
        app:pulse_color="#ffffff"
        app:pulse_startFromScratch="false"
        app:pulse_interpolator="Accelerate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/lin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康检测"
                android:textColor="#34cacc"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一键检测 护航健康"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:textColor="#34cacc"/>

        </LinearLayout>

    </pl.bclogic.pulsator4droid.library.PulsatorLayout>

